<%= form_for @post, :url => "/trips/#{params[:trip_id]}/posts"  do |f| %>

  <div class="post">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

   <div class="post">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>

  <div class="post">
    <%= f.label :context %><br>
    <%= f.text_area :context %>
  </div>

  <div class="field">
    <%= f.label :picture %><br>
    <input type="hidden" name="post[photo_url]" role="uploadcare-uploader" />
  </div>

  <div class="submitPost">
    <%= f.submit %>
  </div>

<% end %>